<!-- CUTE Plugin Cruisecontrol Autobuild delegate script -->
<project name="build-cute"
        default="build"
        basedir=".">

	<property name="features.dir" value="results/dist/updateSite/features"/>
	<property name="plugins.dir" value="results/dist/updateSite/plugins"/>
	<!-- - - - - - - - - - - - - - - - - - 
          target: checkoutBaseBuilder                      
         - - - - - - - - - - - - - - - - - -->
	<target name="checkoutBaseBuilder" unless="builder.available">
		<mkdir dir="tools" />
		<cvs cvsroot=":pserver:anonymous@dev.eclipse.org:/cvsroot/eclipse" package="org.eclipse.releng.basebuilder" tag="R36_RC4" dest="tools" />
	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: init                      
         - - - - - - - - - - - - - - - - - -->
	<target name="init">
		<mkdir dir="${features.dir}"/>
		<mkdir dir="${plugins.dir}"/>
	</target>


	<target name="build" depends="clean, init">
		<available file="${basedir}/tools/org.eclipse.releng.basebuilder/plugins/org.eclipse.equinox.launcher.jar" property="builder.available"/>
		<antcall target="checkoutBaseBuilder"/>

		<java jar="${basedir}/tools/org.eclipse.releng.basebuilder/plugins/org.eclipse.equinox.launcher.jar" fork="true" 
			failonerror="true" dir="${basedir}" resultproperty="error">
			<arg line="-ws gtk -os linux -application org.eclipse.ant.core.antRunner" />
		</java>

		<copy todir="results/dist" 
			flatten="true">
			<fileset dir="results">
				<include name="I*/*.html"/>
				<include name="I*/*.txt"/>
				<include name="I*/*.zip"/>
				<include name="I*/*.tar.gz"/>
			</fileset>
		</copy>
		<copy todir="${features.dir}" flatten="true">
			<fileset dir="results">
				<include name="I*/updateSite/features/*.jar" />
			</fileset>
		</copy>
		<copy todir="${plugins.dir}" flatten="true">
			<fileset dir="results">
				<include name="I*/updateSite/plugins/*.jar" />
			</fileset>
		</copy>
		<copy todir="${plugins.dir}" flatten="true">
			<fileset dir="results">
				<include name="I*/updateSite/*.xml" />
			</fileset>
		</copy>
	</target>

	<target name="clean">
		<delete dir="${basedir}/results"/>
		<delete dir="${basedir}/test"/>
	</target>
</project>
<cruisecontrol>
    
 <project name="cute" buildafterfailed="false">
	    <listeners>
		    <scpbuildstatuslistener targetuser="lechuck" targethost="r2.ifs" targetdir="/var/lib/trac/cute/cruisecontrol_logs"
			file="/usr/share/cruisecontrol/logs/cute/status.txt" />
	    </listeners>
	    
	    <modificationset requiremodification="true" quietperiod="120">
		    <!-- <cvs localworkingcopy="/usr/share/cruisecontrol/projects/cute/cute_test_feature"/>
		    <cvs localworkingcopy="/usr/share/cruisecontrol/projects/cute/cute_test_plugin" />
		    <cvs localworkingcopy="/usr/share/cruisecontrol/projects/cute/cute_feature" />
		    <cvs localworkingcopy="/usr/share/cruisecontrol/projects/cute/cute_plugin" />
		    <cvs localworkingcopy="/usr/share/cruisecontrol/projects/cute/cute_releng" />  -->
		    
		    <cvs cvsroot="cruisecontrol@wiki.ita.hsr.ch:/home/cvs" module="cute_plugin"/>
		    <cvs cvsroot="cruisecontrol@wiki.ita.hsr.ch:/home/cvs" module="cute_feature"/>
		    <cvs cvsroot="cruisecontrol@wiki.ita.hsr.ch:/home/cvs" module="cute_test_plugin"/>
		    <cvs cvsroot="cruisecontrol@wiki.ita.hsr.ch:/home/cvs" module="cute_test_feature"/>
		    <cvs cvsroot="cruisecontrol@wiki.ita.hsr.ch:/home/cvs" module="cute_releng"/>
	    </modificationset>
	    
	    <schedule interval="3000">
		    <ant buildfile="cute-build.xml" uselogger="true" antworkingdir="/usr/share/cruisecontrol/projects" />
		    
	    </schedule>
	    
	    <log logdir="/usr/share/cruisecontrol/logs/cute/">
		    <merge file="/usr/share/cruisecontrol/projects/cute/cute_releng/results/eclipse/ch.hsr.ifs.cute.test.xml"/>
		    <gzip every="5" unit="DAY" />
		    <delete every="20" unit="DAY" />
	    </log>
	    
	    <publishers>
		    <htmlemail mailhost="smtp.hsr.ch" returnaddress="egraf@hsr.ch" returnname="buildmaster" 
buildresultsurl="http://lechuck.dyndns.org:8080/cruisecontrol/buildresults/cute" spamwhilebroken="false" 
css="/usr/share/cruisecontrol/webapps/cruisecontrol/css/cruisecontrol.css" xsldir="/usr/share/cruisecontrol/webapps/cruisecontrol/xsl/" subjectprefix="[CUTE-CC]">
			    <always address="egraf@hsr.ch"/>
      </htmlemail>
      
      <scp targetuser="lechuck" targethost="r2.ifs" targetdir="/var/lib/trac/cute/cruisecontrol_logs"
			     sourcedir="logs/cute/"/>
      
      <artifactspublisher dir="/usr/share/cruisecontrol/projects/cute/cute_releng/results/dist" dest="/usr/share/cruisecontrol/artifacts/cute" />
	    </publishers>
  </project>
  
</cruisecontrol>

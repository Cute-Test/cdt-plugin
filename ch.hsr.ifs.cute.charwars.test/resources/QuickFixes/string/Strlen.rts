//!StrlenReplacement1
//@main.cpp
int main() {
	char *str = "Hello World";
	std::cout << strlen(str) << std::endl;
}
//=

#include <string>
int main() {
	std::string str = "Hello World";
	std::cout << str.size() << std::endl;
}


//!StrlenReplacement2
//@main.cpp
int main() {
	char *str = "Hello World";
	str++;
	std::cout << strlen(str) << std::endl;
}
//=

#include <string>
int main() {
	std::string str = "Hello World";
	std::string::size_type str_pos = 0;
	str_pos++;
	std::cout << (str.size() - str_pos) << std::endl;
}



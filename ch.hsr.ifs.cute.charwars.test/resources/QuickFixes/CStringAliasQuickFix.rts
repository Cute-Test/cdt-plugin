//=
#include <string>
#include "string.h"
int main() {
	std::string str = "hello world";
	std::string::size_type ptr = 0;
	std::cout << (str.size() - ptr) << std::endl;
	ptr++;
	std::cout << (str.size() - ptr) << std::endl;
}
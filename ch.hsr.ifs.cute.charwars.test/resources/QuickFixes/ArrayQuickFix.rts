//!MultipleReplaceOcurrencies
//@main.cpp
#include <iostream>
int a[3];
void printArray(int a[], int size) {
		std::cout << "[ ";
		for (int i = 0; i < size; ++i) {
			std::cout << a[i] << " ";
		}
		std::cout << "]";
}
int main() {
		a[1] = 2;
		a[2] = 3;
		a[0] = 4;
		printArray(a, 3);
}
//=
#include <iostream>
#include <array>
std::array<int, 3> a;
void printArray(int a[], int size) {
		std::cout << "[ ";
		for (int i = 0; i < size; ++i) {
			std::cout << a[i] << " ";
		}
		std::cout << "]";
}
int main() {
		a[1] = 2;
		a[2] = 3;
		a[0] = 4;
	printArray(a.data(), 3);
}



<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>ch.hsr.ifs.mockator.tests</artifactId>
	<packaging>pom</packaging>
	<parent>
		<groupId>ch.hsr.ifs.mockator</groupId>
		<artifactId>ch.hsr.ifs.mockator.root</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<modules>
		<module>ch.hsr.ifs.mockator.plugin.tests</module>
		<module>ch.hsr.ifs.mockator.plugin.it.tests</module>
	</modules>

	<build>
		<plugins>
			<!-- Tycho surefire settings -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho-version}</version>
				<!-- <configuration> -->
				<!-- <useUIHarness>true</useUIHarness> -->
				<!-- <useUIThread>false</useUIThread> -->
				<!-- <failIfNoTests>false</failIfNoTests> -->
				<!-- <includes> -->
				<!-- <include>**/PluginTestSuiteAll.java</include> -->
				<!-- <include>**/PluginUITestSuiteAll.java</include> -->
				<!-- <include>**/SWTBotTestSuiteAll.java</include> -->
				<!-- </includes> -->
				<!-- </configuration> -->
				<executions>
					<execution>
						<id>default-plugin-test</id>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<useUIHarness>true</useUIHarness>
							<useUIThread>false</useUIThread>
							<failIfNoTests>false</failIfNoTests>
							<includes>
								<include>**/PluginTestSuiteAll.java</include>
							</includes>
						</configuration>
					</execution>
					<execution>
						<id>default-plugin-ui-test</id>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<useUIHarness>true</useUIHarness>
							<useUIThread>false</useUIThread>
							<failIfNoTests>false</failIfNoTests>
							<includes>
								<include>**/PluginUITestSuiteAll.java</include>
							</includes>
						</configuration>
					</execution>
					<execution>
						<id>default-swt-bot-test</id>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<useUIHarness>true</useUIHarness>
							<useUIThread>false</useUIThread>
							<failIfNoTests>false</failIfNoTests>
							<includes>
								<include>**/SWTBotTestSuiteAll.java</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>

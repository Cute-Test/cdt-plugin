<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.cdt.codan.core.checkers" id="org.eclipse.cdt.codan.core.categories">
		<category id="ch.hsr.ifs.constificator.categories.ConstificatorProblems" name="Constificator Problems"/>
	</extension>

	<extension point="org.eclipse.cdt.codan.core.checkers">
		<checker
        	class="ch.hsr.ifs.constificator.checkers.LocalVariablesChecker"
        	id="ch.hsr.ifs.constificator.checkers.LocalVariablesChecker"
        	name="Local variables checker">

        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Warning"
				description="Finds local variables that could be const-qualified"
				id="ch.hsr.ifs.constificator.problems.localvariables.missing-qualification"
				messagePattern="Const-qualification could be added."
				name="Missing const-qualification (local variables)"
				markerType="ch.hsr.ifs.constificator.ConstificatorWarningMarker">
			</problem>
			
        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Info"
				description="Finds local variables that could possibly be const-qualified"
				id="ch.hsr.ifs.constificator.problems.localvariables.informational.missing-qualification"
				messagePattern="It might be possible to add const-qualification."
				name="Possibly missing const-qualification (local variables)"
				markerType="ch.hsr.ifs.constificator.ConstificatorInformationalMarker">
			</problem>
		</checker>
		
		<checker
        	class="ch.hsr.ifs.constificator.checkers.FunctionParametersChecker"
        	id="ch.hsr.ifs.constificator.checkers.FunctionParametersChecker"
        	name="Function parameters checker">

        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Warning"
				description="Finds function parameter that could be const-qualified"
				id="ch.hsr.ifs.constificator.problems.functionparameters.missing-qualification"
				messagePattern="Const-qualification could be added."
				name="Missing const-qualification (function parameters)"
				markerType="ch.hsr.ifs.constificator.ConstificatorWarningMarker">
			</problem>
			
        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Info"
				description="Finds function parameters that could possibly be const-qualified"
				id="ch.hsr.ifs.constificator.problems.functionparameters.informational.missing-qualification"
				messagePattern="It might be possible to add const-qualification."
				name="Possibly missing const-qualification (function parameters)"
				markerType="ch.hsr.ifs.constificator.ConstificatorInformationalMarker">
			</problem>
		</checker>
		
		<checker
        	class="ch.hsr.ifs.constificator.checkers.MemberFunctionChecker"
        	id="ch.hsr.ifs.constificator.checkers.ClassMemberChecker"
        	name="Class member checker">

        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Warning"
				description="Finds class members that could be const-qualified"
				id="ch.hsr.ifs.constificator.problems.classmembers.function.missing-qualification"
				messagePattern="Const-qualification could be added."
				name="Missing const-qualification (member functions)"
				markerType="ch.hsr.ifs.constificator.ConstificatorWarningMarker">
			</problem>
			
        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Info"
				description="Finds class members that could possibly be const-qualified"
				id="ch.hsr.ifs.constificator.problems.classmembers.function.informational.missing-qualification"
				messagePattern="It might be possible to add const-qualification."
				name="Possibly missing const-qualification (member functions)"
				markerType="ch.hsr.ifs.constificator.ConstificatorInformationalMarker">
			</problem>
		</checker>

		<checker
        	class="ch.hsr.ifs.constificator.checkers.MemberVariableChecker"
        	id="ch.hsr.ifs.constificator.checkers.ClassMemberVariableChecker"
        	name="Class member checker (member variables)">

        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Warning"
				description="Finds class members that could be const-qualified"
				id="ch.hsr.ifs.constificator.problems.classmembers.variable.missing-qualification"
				messagePattern="Const-qualification could be added."
				name="Missing const-qualification (member variables)"
				markerType="ch.hsr.ifs.constificator.ConstificatorWarningMarker">
			</problem>
			
        	<problem
				category="ch.hsr.ifs.constificator.categories.ConstificatorProblems"
				defaultEnabled="true"
				defaultSeverity="Info"
				description="Finds class members that could possibly be const-qualified"
				id="ch.hsr.ifs.constificator.problems.classmembers.variable.informational.missing-qualification"
				messagePattern="It might be possible to add const-qualification."
				name="Possibly missing const-qualification (member variables)"
				markerType="ch.hsr.ifs.constificator.ConstificatorInformationalMarker">
			</problem>
		</checker>
		
	</extension>

	<extension point="org.eclipse.cdt.codan.ui.codanMarkerResolution">
		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.LocalVariablesQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.localvariables.missing-qualification">
		</resolution>

		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.LocalVariablesQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.localvariables.informational.missing-qualification">
		</resolution>

		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.FunctionParametersQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.functionparameters.missing-qualification">
		</resolution>

		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.FunctionParametersQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.functionparameters.informational.missing-qualification">
		</resolution>
		
		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.MemberFunctionsQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.classmembers.function.missing-qualification">
		</resolution>

		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.MemberFunctionsQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.classmembers.function.informational.missing-qualification">
		</resolution>

		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.MemberVariablesQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.classmembers.variable.missing-qualification">
		</resolution>

		<resolution
			class="ch.hsr.ifs.constificator.quickfixes.MemberVariablesQuickFix"
			problemId="ch.hsr.ifs.constificator.problems.classmembers.variable.informational.missing-qualification">
		</resolution>
	</extension> 
 
	<extension point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator
			class="org.eclipse.cdt.codan.internal.ui.CodanProblemMarkerResolutionGenerator"
			markerType="ch.hsr.ifs.constificator.ConstificatorWarningMarker">
		</markerResolutionGenerator>
	</extension>
 
	<extension point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator
			class="org.eclipse.cdt.codan.internal.ui.CodanProblemMarkerResolutionGenerator"
			markerType="ch.hsr.ifs.constificator.ConstificatorInformationalMarker">
		</markerResolutionGenerator>
	</extension>
 
	<extension name="Constificator Warning Marker" point="org.eclipse.core.resources.markers" id="ch.hsr.ifs.constificator.ConstificatorWarningMarker">
		<super type="org.eclipse.cdt.codan.core.codanProblem"/>         
		<persistent value="true"/>
	</extension>
 
	<extension name="Constificator Informational Marker" point="org.eclipse.core.resources.markers" id="ch.hsr.ifs.constificator.ConstificatorInformationalMarker">
		<super type="org.eclipse.cdt.codan.core.codanProblem"/>         
		<persistent value="true"/>
	</extension>
 
	<extension point="org.eclipse.ui.editors.annotationTypes">
		<type
			super="org.eclipse.ui.workbench.texteditor.warning"
			markerType="ch.hsr.ifs.constificator.ConstificatorWarningMarker"
			name="ch.hsr.ifs.constificator.ConstificatorWarningAnnotation"
			markerSeverity="1"/>
	</extension>
 
	<extension point="org.eclipse.ui.editors.annotationTypes">
		<type
			super="org.eclipse.ui.workbench.texteditor.info"
			markerType="ch.hsr.ifs.constificator.ConstificatorInformationalMarker"
			name="ch.hsr.ifs.constificator.ConstificatorInformationalAnnotation"
			markerSeverity="0"/>
	</extension>
   
	<extension point="org.eclipse.ui.editors.markerAnnotationSpecification">
 		<specification
			annotationType="ch.hsr.ifs.constificator.ConstificatorWarningAnnotation"
			colorPreferenceKey="ch.hsr.ifs.constificator.warn.keys.color"
			colorPreferenceValue="0,180,80"
			contributesToHeader="false"
			includeOnPreferencePage="true"
			label="Constificator Warning Marker"
			presentationLayer="0"
			overviewRulerPreferenceKey="ch.hsr.ifs.constificator.warn.keys.overviewruler"
			overviewRulerPreferenceValue="true"
			highlightPreferenceKey="ch.hsr.ifs.constificator.warn.highlight"
			highlightPreferenceValue="false"
			textPreferenceKey="ch.hsr.ifs.constificator.warn.keys.text"
			textPreferenceValue="true"
			textStylePreferenceValue="PROBLEM_UNDERLINE"
			textStylePreferenceKey="ch.hsr.ifs.constificator.keys.textstyle"
			verticalRulerPreferenceKey="ch.hsr.ifs.constificator.warn.keys.verticalruler"
			verticalRulerPreferenceValue="true"
			showInNextPrevDropdownToolbarActionKey="ch.hsr.ifs.constificator.keys.ShowInNextPrevDropdownToolbarAction"
			showInNextPrevDropdownToolbarAction="true"
			isGoToNextNavigationTargetKey="ch.hsr.ifs.constificator.warn.keys.GoToNextNavigationTarget"
			isGoToNextNavigationTarget="true"
			isGoToPreviousNavigationTargetKey="ch.hsr.ifs.constificator.warn.keys.GoToPreviousNavigationTarget"
			isGoToPreviousNavigationTarget="true"
			icon="icons/greenc.png"
			quickFixIcon="icons/greenc.png"
			symbolicIcon="warning">
		</specification>
	</extension>

	<extension point="org.eclipse.ui.editors.markerAnnotationSpecification">
 		<specification
			annotationType="ch.hsr.ifs.constificator.ConstificatorInformationalAnnotation"
			colorPreferenceKey="ch.hsr.ifs.constificator.info.keys.color"
			colorPreferenceValue="0,80,180"
			contributesToHeader="false"
			includeOnPreferencePage="true"
			label="Constificator Informational Marker"
			presentationLayer="0"
			overviewRulerPreferenceKey="ch.hsr.ifs.constificator.info.keys.overviewruler"
			overviewRulerPreferenceValue="true"
			highlightPreferenceKey="ch.hsr.ifs.constificator.info.highlight"
			highlightPreferenceValue="false"
			textPreferenceKey="ch.hsr.ifs.constificator.info.keys.text"
			textPreferenceValue="true"
			textStylePreferenceValue="PROBLEM_UNDERLINE"
			textStylePreferenceKey="ch.hsr.ifs.constificator.info.keys.textstyle"
			verticalRulerPreferenceKey="ch.hsr.ifs.constificator.info.keys.verticalruler"
			verticalRulerPreferenceValue="true"
			showInNextPrevDropdownToolbarActionKey="ch.hsr.ifs.constificator.info.keys.ShowInNextPrevDropdownToolbarAction"
			showInNextPrevDropdownToolbarAction="true"
			isGoToNextNavigationTargetKey="ch.hsr.ifs.constificator.info.keys.GoToNextNavigationTarget"
			isGoToNextNavigationTarget="true"
			isGoToPreviousNavigationTargetKey="ch.hsr.ifs.constificator.info.keys.GoToPreviousNavigationTarget"
			isGoToPreviousNavigationTarget="true"
			icon="icons/bluec.png"
			quickFixIcon="icons/bluec.png"
			symbolicIcon="info">
		</specification>
	</extension>

</plugin>

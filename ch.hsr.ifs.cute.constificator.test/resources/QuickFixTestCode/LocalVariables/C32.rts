//!Rule4.4.4-1
//@main.cpp
int main() {
	int * * * ptr { };
	int * * * pptr { ptr };
}
//=
int main() {
	int * * * const ptr { };
	int * * const * const pptr { ptr };
}

//!Rule4.4.4-2
//@main.cpp
int main() {
 	int * * * ptr { };
 	int * * * pptr { ptr };
	pptr = nullptr;
}
//=
int main() {
	int * * * const ptr { };
	int * * const * pptr { ptr };
	pptr = nullptr;
}

//!Rule4.4.4-3
//@main.cpp
int main() {
	int * * * ptr { };
	int * * * pptr { ptr };
	*pptr = nullptr;
}
//=
int main() {
	int * * * const ptr { };
	int * * * const pptr { ptr };
	*pptr = nullptr;
}

//!Rule4.4.4-4
//@main.cpp
int main() {
	int * * * ptr { };
	int * * * pptr { ptr };
	**pptr = nullptr;
}
//=
int main() {
	int * * * const ptr { };
	int * * const * const pptr { ptr };
	**pptr = nullptr;
}

//!Rule4.4.4-5
//@main.cpp
int main() {
	int * * * ptr { };
	int * * * pptr { ptr };
	***pptr = 42;
}
//=
int main() {
	int * * * const ptr { };
	int * * const * const pptr { ptr };
	***pptr = 42;
}

